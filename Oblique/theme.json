{
    "Name": "Oblique",
    "Version": 1.0,
    "Author": "Slideas",
    "Description": "Minimalistic and clean theme",
    "Css": "oblique-theme.css",
    "Palets": [
        {
            "Name": "Blue",
            "Css": "blue-palet.css",
            "Dark1": "#222223",
            "Dark2": "#666666",
            "Light1": "#ffffff",
            "Light2": "#eeeeee",
            "Accent1": "#2B5ADC",
            "Accent2": "#c63ebd",
            "Accent3": "#ff4b91",
            "Accent4": "#ff8267",
            "Accent5": "#ffc053",
            "Accent6": "#f9f871"
        },
        {
            "Name": "Green",
            "Css": "green-palet.css",
            "Dark1": "#222223",
            "Dark2": "#666666",
            "Light1": "#ffffff",
            "Light2": "#eeeeee",
            "Accent1": "#00ab7d",
            "Accent2": "#c63ebd",
            "Accent3": "#ff4b91",
            "Accent4": "#ff8267",
            "Accent5": "#ffc053",
            "Accent6": "#f9f871"
        }
    ],
    "Layouts": [
        {
            "Name": "Default",
            "Group": "Basic",
            "Classes": "default",
            "Dynamic": false,
            "DynamicPart": "",
            "Example": "Layout: Default\n\n# Title\n\nWith some **content**\n\n",
            "FixedParts": 1,
            "Template": "<div class = \"innercontent\" ><div class=\"grid\"><div data-slide-fit=\"fit\" class=\"column\"> {@{content}@} </div></div><div class=\"footnotes\">{@{footnotes}@}</div></div><div class=\"oblique\"></div><div class=\"slidenumber\">{@{FOOTER}@}</div>",
            "ThumbnailTemplate": "<div class = \"innercontent\" data-slide-fit=\"fit\"><h1>Title</h1> And content...</div><div class=\"oblique\"></div><div class=\"slidenumber\">1</div>   >",
        },
        {
            "Name": "Title",
            "Group": "Basic",
            "Classes": "title aligncenter",
            "Dynamic": false,
            "DynamicPart": "",
            "Example": "Layout: Title\n\n# Title\n## Level 2 title\n\n",
            "FixedParts": 1,
            "Template": " <div class = \"innercontent inverted\" data-slide-fit=\"fit\">{@{content}@}</div> <div class=\"oblique\"></div>",
            "ThumbnailTemplate": "<div class = \"innercontent inverted\" data-slide-fit=\"fit\"><h1>Title</h1><h2>SubTitle</h2></div><div class=\"oblique\"></div>",
        },
        {
            "Name": "HeaderAndColumns",
            "Group": "Basic",
            "Classes": "titleandcolumns default",
            "Dynamic": true,
            "FixedParts": 1,
            "Example": "Layout: HeaderAndColumns\n\n# Title\n+++\n### Column1\n+++\n### Column2\n+++\n### Column3\n\n",
            "DynamicPart": "<div class=\"column txtfit\"  data-slide-fit=\"fit\"> {@{content}@} </div>",
            "Template": "<div class = \"innercontent\"><div class=\"titleframe\"> {@{content}@} </div> <div class=\"grid\">{@{dynamic}@}</div><div class=\"footnotes\">{@{footnotes}@}</div></div><div class=\"oblique\"></div><div class=\"slidenumber\">{@{FOOTER}@}</div>",
            "ThumbnailTemplate": "<div class = \"innercontent\"><div class=\"titleframe\"> <h1>Title</h1 </div> <div class=\"grid\"><div class=\"column txtfit\"  data-slide-fit=\"fit\"> <h2>Column 1</h2> </div><div class=\"column txtfit\"  data-slide-fit=\"fit\"> <h2>Column 2</h2> </div></div></div><div class=\"slidenumber\">1</div>",
        },
        {
            "Name": "SectionTitle",
            "Group": "Basic",
            "Classes": "sectiontitle",
            "Dynamic": false,
            "DynamicPart": "",
            "Example": "Layout: SectionTitle\n\n# Title\n## Level 2 title\n\n",
            "FixedParts": 1,
            "Template": " <div class =\"innercontent inverted\"><div class=\"grid\"><div class=\"column\" data-slide-fit=\"fit\">{@{content}@} </div> </div> <div class=\"footnotes\">{@{footnotes}@}</div> </div> ",
            "ThumbnailTemplate": " <div class = \"innercontent inverted\" data-slide-fit=\"fit\"><h1>Title</h1><h2>SubTitle</h2></div>     ",
        },
        {
            "Name": "Split",
            "Group": "Basic",
            "Classes": "split",
            "Dynamic": false,
            "DynamicPart": "",
            "Example": "Layout: Split\n\n![](https://slideas.app/img/photos-background.jpg)\n+++\n# Right part\nWith some **content**\n\n",
            "FixedParts": 1,
            "Template": "<div class = \"innercontent\"><div class=\"grid\"><div class=\"column txtfit\"  data-slide-fit=\"fit\"> {@{content}@} </div><div class=\"column txtfit inverted colored column2\"  data-slide-fit=\"fit\"><div>{@{content}@}</div> </div></div></div><div class=\"slidenumber\">{@{FOOTER}@}</div>",
            "ThumbnailTemplate": "<div class=\"innercontent\" ><div class=\"grid\"><div class=\"column \" > <p style=\"display: flex; flex-direction: row;\"></p>   </div><div class=\"column txtfit inverted colored column2\" data-slide-fit=\"fit\"><div>    <h1>Title</h1> </div> </div></div></div>",
        },
        {
            "Name": "KeyPoint",
            "Group": "Basic",
            "Classes": "keypoint",
            "Dynamic": false,
            "DynamicPart": "",
            "FixedParts": 1,
            "Example": "Layout: KeyPoint\n\n# Title\n## Level 2 title\n\n",
            "Template": " <div class = \"innercontent inverted\" data-slide-fit=\"fit\">{@{content}@}</div> ",
            "ThumbnailTemplate": " <div class = \"innercontent inverted\" data-slide-fit=\"fit\"><h1>Title</h1><h2>SubTitle</h2></div>     ",
        },
    ]
}
